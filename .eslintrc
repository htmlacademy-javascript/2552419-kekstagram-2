root: true

parserOptions:
  ecmaVersion: 2022
  sourceType: "module"

env:
  es2022: true
  browser: true

globals:
  noUiSlider: readonly
  Pristine: readonly

extends:
  "htmlacademy/vanilla"

  {
    "extends": "htmlacademy/es6",
    "env": {
      "browser": true,
      "es2021": true
    },
    "rules": {
      "no-use-before-define": ["error", { "functions": false, "classes": true }]
    }
  }
  